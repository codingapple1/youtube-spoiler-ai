{
    "manifest_version": 3,
    "name": "Youtube Spoiler AI",
    "version": "1.0",
    "description": "유튜브 영상 옆에 버튼넣어줌",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["app.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Youtube Spoiler Extension"
    }
}


